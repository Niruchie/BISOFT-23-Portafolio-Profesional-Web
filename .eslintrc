{
    "parser": "@typescript-eslint/parser",
    "plugins": ["react", "react-hooks"],
    "env": {
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:react-hooks/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "createClass": "createReactClass",
            "fragment": "Fragment",
            "flowVersion": "0.53",
            "version": "detect",
            "pragma": "React"
        }
    },
    "ignorePatterns": [
        "**/.config/**",
        "node_modules",
        "build",
        "dist"
    ]
}